{
  "version": "4",
  "include": [
    "bootstrap_vtd.json",
    "config_vtd_smoketest.json"
  ],

  "defaults": {
    "simulators": [
      {
        "binding": "vtd",
        "args": {
          "scp_actions": {
            "stop": "<SimCtrl><Stop/></SimCtrl>"
          }
        }
      }
    ]
  },

  "triggers": [
    {"event": "time=30", "action": {"name": "vtd/scp", "ref": "stop"}},
    {"event": "time=40", "action": "fail"}
  ]
}
